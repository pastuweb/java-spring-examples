<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	 
	 <bean id="scatola" class="test.model.Scatola">
	 	<property name="altezza" value="20" />
	 	<property name="larghezza" value="30" />
	 	<property name="profondita" value="10" />
	 </bean>

	<bean id="magazzino" class="test.model.Magazzino">
	 	<property name="nome" value="test" />
	 	<property name="scatole">
	 		<list>
	 			<ref bean="scatola"/>
				<bean class="test.model.Scatola">
				 	<property name="altezza" value="40" />
				 	<property name="larghezza" value="50" />
				 	<property name="profondita" value="60" />
				</bean>
				<bean class="test.model.Scatola">
					<constructor-arg index="0" value="70" />
					<constructor-arg index="1" value="80" />
					<constructor-arg index="2" value="90" />
				</bean>
				
	 		</list>
	 	</property>
	</bean>	 

</beans>