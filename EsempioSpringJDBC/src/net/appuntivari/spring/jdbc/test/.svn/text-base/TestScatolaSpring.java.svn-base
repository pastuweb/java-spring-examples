import test.model.Scatola;

public class TestScatolaSpring {

	public static Log log = LogFactory.getLog(TestScatolaSpring.class);
	
	public static void main(String[] args) {
		
		AbstractApplicationContext contesto =
			//new ClassPathXmlApplicationContext("context.xml");
			new FileSystemXmlApplicationContext(
					"c:/tcweb/testSpring/context.xml"
					);
		
		Scatola scatola = 
			(Scatola)contesto.getBean("scatola");
		
		System.out.println("ho una scatola con larghezza "
				+scatola.getLarghezza());
		System.out.println("ho una scatola con altezza "
				+scatola.getAltezza());
		
	}
	
}
