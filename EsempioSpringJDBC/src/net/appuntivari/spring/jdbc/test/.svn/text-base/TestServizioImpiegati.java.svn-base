package test;

import java.util.List;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;
import org.springframework.context.support.AbstractApplicationContext;
import org.springframework.context.support.FileSystemXmlApplicationContext;

import test.model.Impiegato;

public class TestServizioImpiegati {

	public static Log log = LogFactory.getLog(TestServizioImpiegatiInterceptor.class);
	
	public static void main(String[] args) {
		
		AbstractApplicationContext contesto =
			new FileSystemXmlApplicationContext(
					"c:/tcweb/testSpring/context2.xml"
					);
		
		ServizioImpiegati servizio = 
			(ServizioImpiegati)contesto.getBean(
					"servizioImpiegati2"
					);
		
		List<Impiegato> impiegati = 
			servizio.getImpiegati();
		
		log.debug("ho letto "+
				impiegati.size()+
				" impiegati");
		
	}
	
}
