<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="it.tcweb.model.dto.Sede" table="sede" catalog="db_gestione_corsi">		
		<id name="id" type="java.lang.Long">
			<column name="ID" />
			<generator class="identity" />
		</id>				
		<property name="descrizione" type="string">
			<column name="DESCRIZIONE" length="60" not-null="true"/>
		</property>
		<property name="indirizzo" type="string">
			<column name="INDIRIZZO" length="40" not-null="true"/>
		</property>
		<bag name="edizioniCorsuali" table="edizione_corsuale" inverse="true" cascade="save-update,delete">      	
            <key column="SEDE" not-null="true" />                             
      		<one-to-many class="it.tcweb.model.dto.EdizioneCorsuale" />
	  	</bag>	  	
	</class>
</hibernate-mapping>

